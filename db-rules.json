// https://firebase.google.com/docs/database/security/securing-data
/*
{
  "rules": {
    ".read": true,
    ".write": true
  }
}
*/

{
  "rules": {
    "2018": {
      ".read": "auth !== null && root.child('users/' + auth.uid).exists()",
      ".write": "auth !== null && root.child('users/' + auth.uid).exists()"
    },
    "admins": {
      ".read": "auth !== null && root.child('users/' + auth.uid).exists()"
    },
    "requests": {
      ".read": "auth !== null && root.child('users/' + auth.uid).exists()",
      ".write": "auth !== null && root.child('users/' + auth.uid).exists()"
    },
    "events": {
      ".read": "auth !== null && root.child('admins/' + auth.uid).exists()",
      ".write": "auth !== null && root.child('users/' + auth.uid).exists()"
    },
    "users": {
      "$user_id": {
        ".write": "auth !== null && auth.uid === $user_id"
      },
      ".read": "auth !== null && root.child('users/' + auth.uid).exists()"
    }
  }
}
